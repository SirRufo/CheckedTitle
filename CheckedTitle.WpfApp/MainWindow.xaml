<Window
  x:Class="CheckedTitle.WpfApp.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CheckedTitle.WpfApp"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="{Binding IsBusy, Mode=OneWay, Converter={local:BooleanToCustomConverter TrueValue='Busy, Busy, Busy ...', FalseValue='Ready 4U'}}"
  Width="800"
  Height="450"
  mc:Ignorable="d">
  <Window.DataContext>
    <local:MainViewModel />
  </Window.DataContext>
  <Grid>
    <CheckBox
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Content="Is Busy"
      IsChecked="{Binding IsBusy}" />
  </Grid>
</Window>
